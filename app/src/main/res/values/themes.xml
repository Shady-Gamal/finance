<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FinanceApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue_primary</item>
    </style>
    <style name="Theme.FinanceApplication" parent="Base.Theme.FinanceApplication" />
    
    <style name="Theme.App.starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/blue_primary</item>
        <item name="postSplashScreenTheme">@style/Theme.FinanceApplication</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/animated_logo</item>

        
    </style>



    <style name="TextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/blue_for_inputText</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@color/offWhite_inputText_background</item>
        <item name="cornerRadius">20dp</item>>
        <item name="hintTextColor">@color/blue_for_inputText</item>
        <item name="android:textColorHint">@color/blue_for_inputText</item>
    </style>

    <style name="HomeScreenButton" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="backgroundTint">@color/silver</item>
        <item name="iconTint">@color/dark_purple</item>
    </style>

    <style name="TextInputLayoutStyleProfile" parent="TextInputLayoutStyle">
        
        <item name="endIconDrawable">@drawable/edit_profile_selector</item>
        <item name="endIconMode">custom</item>
        <item name="hintEnabled">false</item>
    </style>


    <style name="HomeMiniCards" parent="Widget.Material3.CardView.Filled">

        <item name="cardCornerRadius"> 10dp </item>



    </style>


</resources>